<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ZOO" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/main_green</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_green</item>
        <item name="colorSecondaryVariant">@color/main_green</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Map Colors -->
        <item name="colorMapBackground">#121a26</item>
        <item name="colorMapBuilding">#2f3a47</item>
        <item name="colorMapBuildingBorder">#0E141E</item>
        <item name="colorMapRoad">#4E5C6C</item>
        <item name="colorMapRoadVisited">#447C43</item>
        <item name="colorMapRoadBorder">#0E141E</item>
        <item name="colorMapTaken">?colorPrimary</item>
        <item name="colorMapTechnical">#6C4E4E</item>
        <item name="colorMapTechnicalBorder">#0E141E</item>

        <item name="colorSmallMapBackground">#A1DAB8</item>
        <item name="colorSmallMapBuilding">#768A7E</item>
        <item name="colorSmallMapRoad">#FFFFFF</item>
        <item name="colorSmallMapAnimal">#F44336</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>

        <item name="toolbarElevation">4dp</item>
    </style>
</resources>