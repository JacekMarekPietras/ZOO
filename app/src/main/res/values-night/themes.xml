<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ZOO" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/main_green</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_green</item>
        <item name="colorSecondaryVariant">@color/main_green</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>

        <item name="toolbarElevation">4dp</item>
    </style>
</resources>